<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.tisza.esemenynaptar.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp"
    android:layout_margin="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/event_icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dp"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
        />

        <TextView
            android:id="@+id/event_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/event_icon"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@id/event_icon"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="18dp"
        />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/event_category_text"
            android:layout_below="@id/event_category_text"
            android:textStyle="italic"
            android:textColor="#404040"
            android:textSize="12dp"
        />

        <ImageButton
            android:id="@+id/event_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/event_icon"
            android:layout_toLeftOf="@id/event_share"
            android:layout_marginRight="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_thumb_up_black_24dp"
            android:background="@null"
        />

        <ImageButton
            android:id="@+id/event_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@id/event_icon"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:src="@android:drawable/ic_menu_share"
            android:background="@null"
        />

        <TextView
            android:id="@+id/event_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/event_icon"
            android:textSize="12sp"
            android:textColor="#000000"
            android:ellipsize="end"
            />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
